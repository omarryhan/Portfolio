{
  "exclude": ["node_modules", "public", ".cache"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",

    "lib": ["dom", "esnext"],

    // only tsc files are allowed to have TSC code
    "allowJs": false,
    // "checkJs": true,

    "jsx": "react",
    //"jsx": "preserve",

    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,

    // for interop with babel
    "noEmit": true,
    "esModuleInterop": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,

    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,

    // fixes can't find redux, redux-devtools et al.
    "moduleResolution": "node",
  },
}
