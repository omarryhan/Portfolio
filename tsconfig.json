
{
  "include": ["./src/**/**/**/**/**/*"],
  "compilerOptions": {
    "target": "esnext",
    //"module": "commonjs",
    //"module": "es6",
    "module": "esnext",

    "lib": ["dom", "esnext"],
    //"lib": ["dom", "es2017"],

    "allowJs": true,
    // "checkJs": true,

    "jsx": "react",
    //"jsx": "preserve",

    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    
    // for interop with babel
    "noEmit": true,
    "esModuleInterop": true,
    
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,

    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,

    // fixes can't find redux, redux-devtools et al.
    "moduleResolution": "node",
  },
  "exclude": ["node_modules", "public", ".cache"]
}
